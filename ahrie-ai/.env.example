# Application Settings
APP_NAME="Ahrie AI"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_ORIGINS=["http://localhost:3000", "https://t.me"]

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_BASE_URL=https://your-ngrok-domain.ngrok.io

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# OpenRouter API (Optional - for using alternative models like Gemini)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key_here

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ahrie_ai
DB_POOL_MIN_SIZE=10
DB_POOL_MAX_SIZE=20

# Ngrok (for development)
NGROK_AUTHTOKEN=your_ngrok_auth_token_here
NGROK_DOMAIN=your-custom-domain.ngrok.io

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Features
ENABLE_YOUTUBE_SCRAPING=true
ENABLE_WEB_SCRAPING=true
ENABLE_VECTOR_SEARCH=true

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Cache
CACHE_TTL=3600
TRANSLATION_CACHE_TTL=86400